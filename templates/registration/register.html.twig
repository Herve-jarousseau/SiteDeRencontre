{% extends 'base.html.twig' %}

{% block title %}Register | {{ parent() }}{% endblock %}

{% block body %}




    <div class="columns">
        <div class="column is-three-fifths is-offset-one-fifth">

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="notification is-danger is-light" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h3 class="title is-3">Register</h3>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="button is-danger is-light mt-3">Register</button>
            {{ form_end(registrationForm) }}

        </div>
    </div>

{% endblock %}
