{% extends 'base.html.twig' %}

{% block title %}My Picture | {{ parent() }}{% endblock %}

{% block body %}

    <div class="columns">
        <div class="column is-three-fifths is-offset-one-fifth">

            <h3 class="title is-3">My Picture</h3>

            {{ form_start(pictureForm) }}

            {{ form_row(pictureForm.fileName) }}

            <div class="buttons mt-3">
                <button type="submit" class="button is-danger is-light">Validate</button>
                <button type="reset" class="button is-info is-light">Cancel</button>
            </div>
            {{ form_end(pictureForm) }}

        </div>
    </div>

{% endblock %}